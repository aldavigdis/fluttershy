<header>

	<nav class="row">
		<ul class="breadcrumb pull-right">
			<li><%= link_to "Home", "/" %> <span class="divider">/</span></li>
			<li><%= link_to "Companies", :controller => "companies", :action => "index" %> <span class="divider">/</span></li>
			<li><%= link_to @company.name, @company %> <span class="divider">/</span></li>
			<li><%= link_to "Users", :action => "index" %> <span class="divider">/</span></li>
			<li><%= link_to "New User", :action => "index" %></li>
		</ul>
	</nav>

	<div class="row">
	
		<div class="users-list span8">
		
			<h1>New user for <%= @company.name %></h1>
		
		</div>
	
	</div>

</header>

<div class="row">
	
	<div class="span8">
		
		<% if @user.errors.any? %>

		<p><%= pluralize(@user.errors.count, "error", "errors") %> came up when trying to save new user.</p>

		<% @user.errors.full_messages.each do |msg| %>
		<div class="alert">
			<%= msg %>
		</div>
		<% end %>

		<% end %>
		
		<%= render "form" %>
		
	</div>
	
	<div class="span4 pull-right">
		<%= render "shared/company_sidebar" %>
	</div>
	
</div>

