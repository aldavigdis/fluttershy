<h1>View Company</h1>

<%= link_to "Edit", edit_company_path(@company), class: "btn edit" %>
<%= link_to "Delete Account", company_path(@company), method: :delete, data: { confirm: "Are you sure you want to delete this account and all data accociated with it?" }, class: "btn btn-danger delete" %>

<div class="row">
	
	<div class="basic-info span3">
		<h2>Basic Information</h2>
		<table>
			<tr class="name">
				<th span="row">Name</th>
				<td><%= @company.name %></td>
			</tr>
			<% if ( ((@company.kt).nil? || (@company.kt).empty?) == false ) %>
			<tr class="kt">
				<th span="row">Kt</th>
				<td><a href="https://www.rsk.is/fyrirtaekjaskra/leit/kennitala/<%= @company.kt %>"><%= @company.kt %></a></td>
			</tr>
			<tr>
				<th span="row">Account Status</th>
				<td>
					<% if @company.enabled %>
					<span class="label label-success">Enabled</span>
					<% else %>
					<% end %>
				</td>
			</tr>
		</table>
		<table>
			<% end %>
			<% if ( ((@company.contact_name).nil? || (@company.contact_name).empty?) == false ) %>
			<tr class="contact-name">
				<th span="row">Contact Name</th>
				<td><%= @company.contact_name %></td>
			</tr>
			<% end %>
			<% if ( ((@company.email).nil? || (@company.email).empty?) == false ) %>
			<tr class="email">
				<th span="row">Email</th>
				<td><a href="mailto:<%= @company.email %>"><%= @company.email %></a></td>
			</tr>
			<% end %>
			<% if ( ((@company.tel).nil? || (@company.tel).empty?) == false ) %>
			<tr class="tel">
				<th span="row">Telephone</th>
				<td><%= @company.tel %></td>
			</tr>
			<% end %>
			<% if ( ((@company.mobile).nil? || (@company.mobile).empty?) == false ) %>
			<tr class="mobile">
				<th span="row">Mobile Phone</th>
				<td><%= @company.mobile %></td>
			</tr>
			<% end %>
			<% if ( ((@company.mobile).nil? || (@company.mobile).empty?) == false ) %>
			<tr class="fax">
				<th span="row">Fax</th>
				<td><%= @company.fax %></td>
			</tr>
			<% end %>
		</table>
		<table>
			<% if @company_has_billing_address %>
			<tr class="billing">
				<th span="row">Billing Address</th>
				<td>
					<address>
						<% if (@company.address1.nil? || (@company.address1).empty?) == false %><span><%= @company.address1 %></span><br /><% end %>
						<% if (@company.address2.nil? || (@company.address2).empty?) == false %><span><%= @company.address2 %></span><br /><% end %>
						<% if @company.postcode.nil? == false %><span><%= @company.postcode %></span><% end %>
						<% if @company.city.nil? == false %><span><%= @company.city %></span><% end %>
					</address>
				</td>
			</tr>
			<% end %>
			<% if @company_has_shipping_address %>
			<tr class="shipping">
				<th span="row">Shipping Address</th>
				<td>
					<address>
						<span><%= @company.shipping_address1 %></span><br />
						<span><%= @company.shipping_address2 %></span><br />
						<span><%= @company.shipping_postcode %></span>
						<span><%= @company.shipping_city %></span>
					</address>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
	<div class="deliveries span3">
		<h2>Deliveries</h2>
	</div>
	
</div>
