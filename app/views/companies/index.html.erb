<h1>Companies</h1>

<% if @companies.count == 0 %>

<div class="alert">
	<%= new_company_path() %>
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<span>No companies have been registered yet.</span>
</div>

<% end %>

<div class="top-buttons">

	<%= link_to "New Company", "/companies/new/", html_options = { class: "btn" } %>

</div>

<% if @companies.count != 0 %>

<table class="table table-responsive table-striped table-hover" id="table-companies">
	
	<thead>
		<tr>
			<th span="col" class="company-name">Company name</th>
			<th span="col" class="email">Email</th>
			<th span="col" class="telephone">Telephone</th>
			<th span="col" class="contact-name">Contact Name</th>
			<th span="col" class="billing-address">Billing Address</th>
		</tr>
	</thead>
	
	<tbody>

	<% @companies.each do |company| %>
	<tr>
		<th span="row" class="company-name">
			<%= link_to company.name, company %>
			<% if ( ((company.kt).nil? || (company.kt).empty?) == false ) %>
			(<%= company.kt %>)
			<% end %>
		</th>
		<td class="email">
			<%= mail_to company.email %>
		</td>
		<td class="telephone">
			<a href="tel:<%= company.tel %>"><%= company.tel %></a>
		</td>
		<td class="contact-name">
			<%= company.contact_name %>
		</td>
		<td class="billing-address">
			<address>
				<% if company.address1.present? %><span><%= company.address1 %></span><br /><% end %>
				<% if company.address2.present? %><span><%= company.address2 %></span><br /><% end %>
				<% if company.postcode.present? %><span><%= company.postcode %></span><% end %>
				<% if company.city.present? %><span><%= company.city %></span><% end %>
			</address>
		</td>
		<td class="buttons">
			<%= link_to "Edit", edit_company_path(company), class: "btn btn-mini edit" %>
		</td>
	</tr>
	<% end %>
	
	</tbody>

</table>

<% end %>
