<h1>Companies</h1>

<% if @companies.count == 0 %>

<div class="alert">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<span>No companies have been registered yet.</span>
</div>

<% end %>

<a href="/companies/new/" class="btn">New Company</a>

<% if @companies.count != 0 %>

<table class="table" id="table-companies">
	
	<thead>
		<tr>
			<th span="col">Company name</th>
			<th span="col">Email</th>
			<th span="col">Telephone</th>
			<th span="col">Contact Name</th>
		</tr>
	</thead>
	
	<tbody>

	<% @companies.each do |company| %>
	<tr>
		<th span="row">
			<%= link_to company.name, company %>
			<% if ( ((company.kt).nil? || (company.kt).empty?) == false ) %>
			(<%= company.kt %>)
			<% end %>
		</th>
		<td>
			<%= mail_to company.email %>
		</td>
		<td>
			<a href="tel:<%= company.tel %>"><%= company.tel %></a>
		</td>
		<td>
			<%= company.contact_name %>
		</td>
		<td>
			<%= link_to "Edit", edit_company_path(company), class: "btn btn-small edit" %>
			<%= link_to "Delete Account", company_path(company), method: :delete, data: { confirm: "Are you sure you want to delete this account and all data accociated with it?" }, class: "btn btn-small btn-danger delete" %>
		</td>
	</tr>
	<% end %>
	
	</tbody>

</table>

<% end %>
